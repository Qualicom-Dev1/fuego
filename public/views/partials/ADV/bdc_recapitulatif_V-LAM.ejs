                <label>euros</label>
                <label>Nombre de mensualités</label>
                <p class="emplacement"><%= infosPaiement.isCredit ? infosPaiement.nbMensualiteCredit : '' %></p>
            </div>
            <div class="row ligne ligne12">
                <label>Montant des mensualités</label>
                <p class="emplacement"><%= infosPaiement.isCredit ? infosPaiement.montantMensualiteCredit : '' %></p>
                <label>euros</label>

                <label>Report</label>
                <p class="emplacement"><%= infosPaiement.isCredit ? infosPaiement.nbMoisReportCredit : '' %></p>
                <label>mois</label>

                <label>Taux nominal</label>
                <p class="emplacement"><%= infosPaiement.isCredit ? infosPaiement.tauxNominalCredit : '' %></p>
                <label>%</label>
            </div>
            <div class="row ligne ligne13">
                <label>Taux effectif Global</label>
                <p class="emplacement"><%= infosPaiement.isCredit ? infosPaiement.tauxEffectifGlobalCredit : '' %></p>
                <label>%</label>

                <label>Date première échéance : <%=  infosPaiement.isCredit ? infosPaiement.datePremiereEcheanceCredit : '....../....../............' %></label>

                <label>Coût total du crédit</label>
                <p class="emplacement"><%= infosPaiement.isCredit ? infosPaiement.coutTotalCredit : '' %></p>
                <label>euros</label>
            </div>

