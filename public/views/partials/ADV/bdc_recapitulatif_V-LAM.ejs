<html>

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, user-scalable=no">

        <link rel="stylesheet" href="/public/assets/css/adv/bdc_recapitulatif.css">
    </head>

    <% const { client, listeProduits, infosPaiement, observations, datePose, dateLimitePose, prix } = bdc %>

    <body>
        <div class="container-fluid mainfiche">
            <h2>Renseignements client</h2>
            <div class="row ligne ligne2">
                <label>Intitulé</label>
                <p class="emplacement"><%= client.intitule %></p>
            </div>
            <div class="row ligne ligne1">
                <label>Nom</label>
                <p class="emplacement"><%= client.nom1 %></p>
                <label>Prénom</label>
                <p class="emplacement"><%= client.prenom1 %></p>
            </div>
        <% if(client.nom2 && client.prenom2) { %>
            <div class="row ligne ligne1">
                <label>Nom</label>
                <p class="emplacement"><%= client.nom2 %></p>
                <label>Prénom</label>
                <p class="emplacement"><%= client.prenom2 %></p>
            </div>
        <% } %>

            <div class="row ligne ligne2">
                <label>Adresse</label>
                <p class="emplacement"><%= client.adresse %></p>
            </div>
            <div class="row ligne ligne2">
                <label>Complément 1</label>
                <p class="emplacement"><%= client.adresseComplement1 %></p>
            </div>
            <div class="row ligne ligne2">
                <label>Complément 2</label>
                <p class="emplacement"><%= client.adresseComplement2 %></p>
            </div>

            <div class="row ligne ligne3">
                <label>CP Ville</label>
                <p class="emplacement"><%= `${client.cp}, ${client.ville}` %></p>
            </div>

            <div class="row ligne ligne3">
                <label>Email</label>
                <p class="emplacement"><%= client.email %></p>
            </div>

            <div class="row ligne ligne4">
                <label>Tel fixe</label>
                <p class="emplacement"><%= client.telephoneFixe %></p>
                <label>Port.</label>
                <p class="emplacement"><%= client.telephonePort %></p>
            </div>


            <h2>Renseignements techniques</h2>

            <div class="row ligne ligne5">
                <label>Installation électrique :</label>
                <div class="<%= client.ficheRenseignementsTechniques.typeInstallationElectrique === 'monophasée' ? 'selectedBox' : 'box' %>">monophasée</div>
                <div class="<%= client.ficheRenseignementsTechniques.typeInstallationElectrique === 'triphasée' ? 'selectedBox' : 'box' %>">triphasée</div>
                <label>Puissance</label>
                <p class="emplacement"><%= client.ficheRenseignementsTechniques.puissanceKW %></p>
                <label>KW</label>
                <p class="emplacement"><%= client.ficheRenseignementsTechniques.puissanceA %></p>
                <label>A</label>
            </div>

            <div class="row ligne ligne6">
                <label>Maison construite en</label>
                <p class="emplacement"><%= client.ficheRenseignementsTechniques.anneeConstructionMaison %></p>
                <label>ou depuis environ</label>
                <p class="emplacement"><%= client.ficheRenseignementsTechniques.dureeSupposeeConstructionMaison %></p>
                <label>ans | Propriétaire depuis</label>
                <p class="emplacement"><%= client.ficheRenseignementsTechniques.dureeAcquisitionMaison %></p>
                <label>ans</label>
            </div>

            <div class="row ligne ligne7">
                <label>Résidence d'habitation :</label>
                <div class="<%= client.ficheRenseignementsTechniques.typeResidence === 'principale' ? 'selectedBox' : 'box' %>">principale</div>
                <div class="<%= client.ficheRenseignementsTechniques.typeResidence === 'secondaire' ? 'selectedBox' : 'box' %>">secondaire</div>
                <label>Superficie</label>
                <p class="emplacement"><%= client.ficheRenseignementsTechniques.superficie %></p>
            </div>

            <h2>Commande</h2>
            <div class="ctn_table">
                <table>
                    <thead>
                        <th></th>
                        <th>Qté</th>
                        <th class="materiel">Désignation (Matériel - Pose - garantie)</th>
                        <th>Puissance (KW)</th>                        
                        <th>Prix unitaire HT (€)</th>
                        <th>TVA (%)</th>
                        <th>Prix unitaire TTC (€)</th>
                        <th>TOTAL HT (€)</th>
                        <th>TOTAL TTC (€)</th>
                    </thead>
                    <tbody>
                    <% for(const produit of listeProduits) { %>
                        <tr>
                            <td></td>
                            <td><%= produit.quantite %></td>
                            <td><%= produit.designation %></td>
                            <td><%= (produit.caracteristique && produit.uniteCaracteristique.trim().toUpperCase() === 'KW') ? produit.caracteristique : '-' %></td>                            
                            <td><%= Number(produit.prixUnitaireHT).toFixed(2) %></td>
                            <td><%= produit.tauxTVA ? Number(produit.tauxTVA).toFixed(2) : '-' %></td>
                            <td><%= Number(produit.prixUnitaireTTC).toFixed(2) %></td>
                            <td class="produitPrixTotal"><%= Number(produit.prixHT).toFixed(2) %></td>
                            <td class="produitPrixTotal"><%= Number(produit.prixTTC).toFixed(2) %></td>
                        </tr>
                        <% if(produit.isGroupe) { %>
                            <% for(const sousProduit of produit.listeProduits) { %>
                                <tr>
                                    <td class="invisible"></td>
                                    <td><%= sousProduit.quantite %></td>
                                    <td><%= sousProduit.designation %></td>
                                    <td><%= (sousProduit.caracteristique && sousProduit.uniteCaracteristique.trim().toUpperCase() === 'KW') ? sousProduit.caracteristique : '-' %></td>
                                    <td><%= Number(sousProduit.prixUnitaireHT).toFixed(2) %></td>
                                    <td><%= sousProduit.tauxTVA ? Number(sousProduit.tauxTVA).toFixed(2) : '-' %></td>
                                    <td><%= Number(sousProduit.prixUnitaireTTC).toFixed(2) %></td>
                                    <td><%= Number(sousProduit.prixHT).toFixed(2) %></td>
                                    <td><%= Number(sousProduit.prixTTC).toFixed(2) %></td>
                                </tr>
                            <% } %>
                        <% } %>
                    <% } %>
                        <tr>
                            <td class="invisible" colspan="9"></td>
                        </tr>
                        <tr>
                            <td class="invisible" colspan="6"></td>
                            <td colspan="2" class="soustotal">Prix Total HT(€)</td>
                            <td class="produitPrixTotal"><%= prix.HT %></td>
                        </tr>
                        <tr>
                            <td class="invisible" colspan="6"></td>
                            <td colspan="2" class="soustotal">Prix Total TTC(€)</td>
                            <td class="produitPrixTotal"><%= prix.TTC %></td>
                        </tr>
                    </tbody>
                </table>

                <table id="tableTVA">
                <% const alphabet = ['A', 'B', 'C', 'D', 'E', 'F', 'G', 'H'] %> 
                <% for(let i= 0; i < prix.listeTauxTVA.length; i++) { %>
                    <tr>
                        <td class="taux">TVA <%= alphabet[i] %> : taux à<p class="pourcent"><%= prix.listeTauxTVA[i].tauxTVA %> %</p></td>
                        <td><%= prix.listeTauxTVA[i].montant %></td>
                    </tr>
                <% } %>
                </table>
            </div>

            <h2>Observations</h2>
            <div class="row ligne">
                <p class="emplacement emplacementcomm"><%= observations %></p>
            </div>

            <div class="row ligne ligne8">
                <h2>Pose du matériel</h2>
                <label>Date de pose souhaitée : <%= datePose %></label>
                <label>Date limite de pose : <%= dateLimitePose %></label>
            </div>

            <h2>Modalités de paiement de la commande</h2>
            <div class="row ligne ligne9">
                <div class="<%= infosPaiement.isAcompte ? 'selectedBox' : 'box' %>">Acompte :</div>
                <div class="<%= infosPaiement.typeAcompte === 'CHÈQUE' ? 'selectedBox' : 'box' %>">CHÈQUE</div>
                <div class="<%= infosPaiement.typeAcompte === 'ESPÈCES' ? 'selectedBox' : 'box' %>">ESPÈCES</div>
                <label>Pour un montant de </label>
                <p class="emplacement"><%= infosPaiement.isAcompte ? infosPaiement.montantAcompte : '' %></p>
                <label>euros</label>
            </div>
            <div class="row ligne ligne10">
                <div class="<%= infosPaiement.isComptant ? 'selectedBox' : 'box' %>">Paiement comptant le jour de l’installation pour un montant de</div>
                <p class="emplacement"><%= infosPaiement.isComptant ? infosPaiement.montantComptant : '' %></p>
                <label>euros</label>
            </div>
            <div class="row ligne ligne11">
                <div class="<%= infosPaiement.isCredit ? 'selectedBox' : 'box' %>"><%= infosPaiement.organismeCredit ? `Paiement via l'organisme de crédit <span class="organismeCredit">${infosPaiement.organismeCredit}</span> pour un montant de` : 'Paiement via un organisme de crédit pour un montant de' %></div>
